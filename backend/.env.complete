# Configuración de base de datos
DATABASE_URL="postgresql://yeiconcr@localhost:5432/joyeria_elegante?schema=public"

# Configuración de autenticación
JWT_SECRET="dev-secret-key-12345-extra-secure"
SESSION_SECRET="dev-session-secret-12345-extra-secure"
JWT_EXPIRES_IN="7d"

# Configuración del servidor
PORT="3001"
NODE_ENV="development"

# Configuración de CORS
FRONTEND_URL="http://localhost:5173"
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# Configuración de seguridad
CSRF_SECRET="dev-csrf-secret-12345"

# Configuración de la aplicación
APP_NAME="Olivia Gold"
APP_URL="http://localhost:3001"

# Configuración de la API
API_PREFIX="/api"
API_VERSION="v1"

# Configuración de logs
LOG_LEVEL="info"

# Configuración de sesión
SESSION_NAME="olivia_gold_sid"
SESSION_SECURE="false"
SESSION_HTTP_ONLY="true"
SESSION_SAME_SITE="lax"

# Configuración de cookies
COOKIE_SECURE="false"
COOKIE_HTTP_ONLY="true"
COOKIE_SAME_SITE="lax"

# Configuración de Email (requerida para la validación)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="user@example.com"
SMTP_PASS="password"
SMTP_FROM_NAME="Olivia Gold"
SMTP_FROM_EMAIL="no-reply@oliviagold.com"
SMTP_SECURE="false"
CONTACT_EMAIL="servicio@oliviagold.com"

# Cloudinary (requerido para la validación)
CLOUDINARY_CLOUD_NAME="dummy"
CLOUDINARY_API_KEY="1234567890"
CLOUDINARY_API_SECRET="dummy-api-secret-1234567890"

# Google OAuth (requerido para la validación)
GOOGLE_CLIENT_ID="dummy-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="dummy-google-secret-1234567890"
GOOGLE_CALLBACK_URL="http://localhost:3001/api/auth/google/callback"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="500"
