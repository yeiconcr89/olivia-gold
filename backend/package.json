{
  "name": "joyeria-elegante-backend",
  "version": "1.0.0",
  "description": "Backend API para Joyería Elegante - Sistema de gestión de joyería en oro laminado",
  "main": "dist/server.js",
  "prisma": {
    "seed": "tsx src/scripts/seed.ts"
  },
  "scripts": {
    "dev": "tsx src/scripts/restart-server.ts && tsx watch src/server.ts",
    "dev:clean": "tsx src/scripts/restart-server.ts && tsx watch src/server.ts",
    "build": "tsc",
    "start": "tsx src/scripts/restart-server.ts && node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:seed:seo": "tsx src/scripts/seed-seo.ts",
    "db:seed:payments": "tsx src/scripts/seed-payment-data-simple.ts",
    "db:clean": "tsx src/scripts/clean-duplicates.ts",
    "db:reset": "tsx src/scripts/reset-db.ts",
    "db:fresh": "npm run db:reset && npm run db:seed",
    "db:indexes": "psql $DATABASE_URL -f prisma/indexes.sql",
    "test": "npm run test:validate && NODE_ENV=test jest",
    "test:watch": "npm run test:validate && NODE_ENV=test jest --watch",
    "test:coverage": "npm run test:validate && NODE_ENV=test jest --coverage",
    "test:payments": "npm run test:validate && NODE_ENV=test jest --testPathPattern=payment",
    "test:integration": "npm run test:validate && NODE_ENV=test jest --testPathPattern=integration",
    "test:unit": "npm run test:validate && NODE_ENV=test jest --testPathPattern=services",
    "test:validate": "NODE_ENV=test tsx src/scripts/validate-test-db.ts",
    "test:db:setup": "NODE_ENV=test DATABASE_URL=\"postgresql://yeiconcr@localhost:5432/joyeria_elegante_test?schema=public\" npx prisma db push",
    "test:db:reset": "NODE_ENV=test DATABASE_URL=\"postgresql://yeiconcr@localhost:5432/joyeria_elegante_test?schema=public\" npx prisma db push --force-reset",
    "test:setup": "npm run test:db:setup",
    "test:clean": "npm run test:db:reset && npm run test:setup",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "jewelry",
    "ecommerce",
    "api",
    "typescript",
    "prisma"
  ],
  "author": "Joyería Elegante",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/nodemailer": "^7.0.4",
    "@types/redis": "^4.0.10",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^5.9.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
